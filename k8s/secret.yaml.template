apiVersion: v1
kind: Secret
metadata:
  name: ai-log-analyzer-secrets
  namespace: ai-log-analyzer
type: Opaque
stringData:
  # Database connection
  DATABASE_URL: "postgresql://ailog:CHANGE_ME@postgresql:5432/ailog_analyzer"
  
  # Elasticsearch credentials
  ES_URL: "https://logs.example.com:9200"
  ES_USER: "your_elasticsearch_user"
  ES_PASSWORD: "your_elasticsearch_password"
  
  # OpenAI API key (if using OpenAI instead of Ollama)
  OPENAI_API_KEY: "sk-..."
  
  # Redis (optional)
  REDIS_URL: "redis://redis:6379/0"
