# ============================================================================
# AI Log Analyzer - Environment Configuration
# ============================================================================
# Zkopíruj tento soubor do .env a vyplň hodnoty

# ============================================================================
# ELASTICSEARCH
# ============================================================================
ES_HOST=https://elasticsearch-test.kb.cz:9500
ES_USER=XX_PCBS_ES_READ
ES_PASSWORD=your_password_here
ES_INDEX=cluster-app_pcb-*,cluster-app_pca-*,cluster-app_pcb-ch-*

# ============================================================================
# POSTGRESQL
# ============================================================================
DB_HOST=P050TD01.DEV.KB.CZ
DB_PORT=5432
DB_NAME=ailog_analyzer
DB_USER=ailog_analyzer_user_d1
DB_PASSWORD=your_password_here

# DDL user (pro migrace)
DB_DDL_USER=ailog_analyzer_ddl_user_d1
DB_DDL_PASSWORD=your_ddl_password_here

# ============================================================================
# PIPELINE CONFIGURATION
# ============================================================================
# Spike detection threshold (current > baseline * SPIKE_THRESHOLD)
SPIKE_THRESHOLD=3.0

# EWMA alpha (0.3 = 30% váha nových hodnot)
EWMA_ALPHA=0.3

# MAD threshold pro spike detection
SPIKE_MAD_THRESHOLD=3.0

# Cross-namespace threshold (min počet namespaces)
CROSS_NS_THRESHOLD=2

# Window size in minutes
WINDOW_MINUTES=15

# Baseline windows (kolik oken pro výpočet baseline)
BASELINE_WINDOWS=20

# ============================================================================
# NOTIFICATIONS (optional)
# ============================================================================
# Microsoft Teams webhook pro alerting
TEAMS_WEBHOOK_URL=

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# ============================================================================
# DATA PATHS
# ============================================================================
# Kam ukládat batch data
DATA_DIR=./data

# Kam ukládat reporty
REPORTS_DIR=./data/reports

# Kam ukládat snapshoty pro replay
SNAPSHOTS_DIR=./data/snapshots

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
