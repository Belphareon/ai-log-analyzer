# AI Log Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=ai-log-analyzer
APP_ENV=development
LOG_LEVEL=INFO

# ============================================================================
# DATABASE SETTINGS (Phase 2)
# ============================================================================
DATABASE_URL=postgresql://ailog:ailog_dev_pass@localhost:5432/ailog_analyzer

# ============================================================================
# ELASTICSEARCH SETTINGS (Phase 1 & 2)
# ============================================================================
ES_URL=https://logs.example.com:9200
ES_USER=your_elasticsearch_user
ES_PASSWORD=your_elasticsearch_password
ES_INDEX_PATTERN=logstash-*

# ============================================================================
# LLM SETTINGS (Phase 2)
# ============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
USE_MOCK_LLM=true

# ============================================================================
# EWMA SETTINGS (Anomaly Detection)
# ============================================================================
EWMA_ALPHA=0.3
EWMA_THRESHOLD=2.0

# ============================================================================
# API SETTINGS (Phase 2)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# REDIS SETTINGS (Optional)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
