# =============================================================================
# AI LOG ANALYZER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# .env file is in .gitignore and will NOT be committed to git
# =============================================================================

# -----------------------------------------------------------------------------
# ELASTICSEARCH
# -----------------------------------------------------------------------------
ES_URL=https://elasticsearch.your-domain.com:9200
ES_INDEX=cluster-app_your-app-*
ES_USER=XX_YOUR_APP_ES_READ
ES_PASSWORD=your_elasticsearch_password_here
ES_VERIFY_CERTS=false

# -----------------------------------------------------------------------------
# DATABASE (Optional - only for Full setup)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://ailog:ailog_dev_pass@localhost:5432/ailog_analyzer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ailog_analyzer
DB_USER=ailog
DB_PASSWORD=your_db_password_here

# -----------------------------------------------------------------------------
# API SETTINGS (Optional - only for Full setup)
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# -----------------------------------------------------------------------------
# SECURITY (Optional - only for Full setup)
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_generated_secret_key_here
ALGORITHM=HS256

# -----------------------------------------------------------------------------
# OLLAMA LLM (Optional)
# -----------------------------------------------------------------------------
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest

# -----------------------------------------------------------------------------
# REDIS (Optional)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# ANALYSIS SETTINGS
# -----------------------------------------------------------------------------
LEARNING_ENABLED=true
AUTO_ADJUST_THRESHOLDS=true
MIN_SAMPLES_FOR_LEARNING=10
